type ('a,'b) ab = A of 'a | B of 'b;;
let k = [ A 5; B 5.5; A 6; B 7.5];;
let kk = [ A 5; B 5.5; A 6; B 7.5; B 8.8];;
let rec naPrzemian l=
	match l with
	| [] -> true
	| [x] -> true
	| h::t ->match (h, List.hd t) with
					|(B _, A _) ->naPrzemian t; 
					|(A _, B _) ->naPrzemian t;
					|(B _, _) -> false 	
					|(A _, _) -> false
	;;			

naPrzemian k;
naPrzemian kk;