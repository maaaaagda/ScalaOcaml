zad 5
let rec initSegment (xs, xm) = 
	match (xs, xm) with 
	| [],_ ->true
	| _,[]->false
	| hd1::tl1,hd2::tl2 when(hd1=hd2) ->initSegment(tl1, tl2)
	| _ -> false;;

	initSegment(3::2::7::[], []);;
*/



def initSegment[A,B](xs:List[A], xm:List[B]):Boolean =
  (xs, xm) match
  {
  case (Nil, _) =>true
  case (_, Nil) => false
  case (h1::t1,h2::t2) if h1==h2 =>initSegment(t1, t2)
  case _ => false
  }
	initSegment(List(3,4,5,6,7), List(3,4,5,6,7,8,9))